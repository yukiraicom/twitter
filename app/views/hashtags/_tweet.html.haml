.tweet-area__boader  
  = image_tag tag.tweet.user.avatar, class: :avatar
  .tweet-area__item
    .tweet-area__item__username
      = link_to "#{tag.tweet.user.name}", user_path(tag.tweet.user.id)
    = tweetText tag.tweet.text
    .tweet-area__item__tags
      - tag.tweet.hashtags.each do |tag|
        = link_to "##{tag.tag}", hashtag_path(tag.tag)
    = image_tag tag.tweet.image, class: 'tweet-area__item__image'  if tag.tweet.image.present? 

