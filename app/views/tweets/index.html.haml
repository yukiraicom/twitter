.container
  %ul.nav
    %li<
      %a{href: "/", class: "container__text"}<
        = fa_icon "home", class: "fa-2x"
        %span ホーム
    %li<
      %a{href: "#", class: "container__text"}<
        = fa_icon "bolt", class: "fa-2x" 
        %span モーメント
    %li<
      %a{href: "#", class: "container__text"}<
        = fa_icon "bell", class: "fa-2x" 
        %span 通知
    %li<
      %a{href: "#", class: "container__text"}<
        = fa_icon "envelope", class: "fa-2x" 
        %span メッセージ

  = fa_icon "twitter", class: "fa-2x"
  - if user_signed_in?
    =link_to "ログアウト",destroy_user_session_path, class: "container__login"
  -else
    =link_to "アカウントをお持ちの場合  ログイン", new_user_session_path, class: "container__login"

.main
  .dashboard
    = render partial: "profilecard"
  .tweet-area
    = form_for(@tweet) do |f|
      =f.text_field :text, placeholder: "今どうしてる？"
      =f.submit class: "__submit"
    = render partial: "tweet", collection: @tweets
  .clearfix
